<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DinhThucActivity">

    <TextView
        android:text="Cấp Ma trận"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"
        android:background="#ff0"
        android:textColor="#ca2104"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/nhapSaiCapMaTran"
        android:textSize="25sp"
        android:textColor="#f2000c"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtCapMaTran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Nhập cấp của ma trận"
        android:inputType="number"
        android:padding="15dp" />
    <Button
        android:id="@+id/btnCapMatran"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>